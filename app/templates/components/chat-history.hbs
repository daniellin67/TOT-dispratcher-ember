<div class="modal" id="chat-history-modal">
    <div class="modal-dialog modal-xl mt-2">
        <div class="modal-content">
            <div class="modal-body">
                <div class="col-md-8">
                    <div class="title">
                        Lịch sử chat
                    </div>
                    <div class="gray-divider">

                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label>Ngày bắt đầu:</label>
                            <div class="input-group date" data-date-format="dd-mm-yyyy">
                                <input class="form-control" type="text" placeholder="Ngày bắt đầu">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label>Ngày kết thúc</label>
                            <div class="input-group date" data-date-format="dd-mm-yyyy">
                                <input class="form-control" type="text" placeholder="Ngày bắt đầu">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label>Loại tin nhắn</label>
                            <select class="custom-select border">
                                <option value="-1">Tất cả</option>
                                <option value="1">1</option>
                                <option value="2">2<i class="fas fa-signal-alt-1    "></i></option>
                            </select>
                        </div>
                    </div>
                    <div class="gray-divider">

                    </div>
                    <div class="my-table">
                        <table class="table table-striped table-fixed">
                            <thead>
                                <tr>
                                    <th scope="col" class="col-md-3">Ngày</th>
                                    <th scope="col" class="col-md-1">Loại</th>
                                    <th scope="col" class="col-md-4">Người gửi</th>
                                    <th scope="col" class="col-md-4">Người nhận</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>07/07/2019</td>
                                    <td>1</td>
                                    <td>Lâm Cương Đạt</td>
                                    <td>Lâm Cường Đạt</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="title">
                                Chi tiết
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="close d-flex align-items-center" data-dismiss="modal"
                                aria-label="Close" id=close-history-button>
                                <span aria-hidden="true" class="d-flex align-items-center"><i
                                        class="fas fa-times"></i></span>
                            </button>
                        </div>
                    </div>
                    <div class="gray-divider">

                    </div>
                    <div class="message-detail">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>