<div class="container-fluid" id="sign-in-container">
  <div class="container-fluid d-flex justify-content-center">
    <div>Dispratcher</div>
  </div>
  <div class="container d-flex justify-content-center">
    <div class="card" style="width: 40%">
      <div class='card-header'>
        <strong>Đăng nhập</strong>
      </div>
      <div class="card-body">
        <form onsubmit={{action 'authenticate'}}>
          <div class="form-group">
            <label for="login">Tên đăng nhập</label>
            <input type="text" class="form-control" id="login"
              placeholder="Nhập tên đăng nhập">
            <small id="error" class="form-text">Sai tên đăng nhập hoặc mật khẩu</small>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu">
          </div>
          <button type="submit" class="btn btn-primary d-flex justify-content-center align-items-center">
            <i class="fas fa-angle-right"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  var height = $(window).height();
  $('div#sign-in-container').height(height);
</script>